{{ "collection-page.css" | asset_url | stylesheet_tag }}
{{ "product.css" | asset_url | stylesheet_tag }}
{{ "cleanstate.css" | asset_url | stylesheet_tag }}

{% if canonical_url contains "/1?" or canonical_url contains "/1#" %}
  {% include "collection-page-preview" %}
{% else %}
  {% if section.settings.show_collection_name %}
    <h1 class="collection-page__title">{{ collection.name }}</h1>
  {% endif %}
  {% if collection.items_count > 0 %}
    {% assign paginate_object = collection.items %}
    {% paginate paginate_object %}
      <div class="collection-page__items">
        {% for item in paginate_object %}
          {% assign image = item.images.first %}
          <div class="product">
            <a href="{{ item.url }}" class="product__image-container"><img data-src="{{ image.url | image_url }}" alt="" class="product__image lazyload"></a>
            {{ item | product_availability }}
            <a href="{{ item.url }}">
              <h3 class="product__name">{{ item.name }}</h3>
            </a>
            {{ item | product_price_label }}
            {{ item | product_price }}
          </div>
        {% endfor %}
      </div>
      {% if paginate.pages > 1 %}
        <div class="collection-page__pagination">
          {% include "pagination" %}
        </div>
      {% endif %}
    {% endpaginate %}
  {% else %}
    {% include "cleanstate" %}
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Product list",
  "tag": "section",
  "class": "collection-page",
  "templates": ["collection"],
  "settings": [
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "checkbox",
      "id": "show_collection_name",
      "label": "Show collection name",
      "default": true
    },
    {
      "type": "header",
      "content": "Cleanstate"
    },
    {
      "id": "heading",
      "label": "Heading",
      "type": "text"
    },
    {
      "id": "text",
      "label": "Text",
      "type": "textarea"
    },
    {
      "id": "button_label",
      "label": "Button label",
      "type": "text"
    },
    {
      "id": "button_background",
      "label": "Button background color",
      "type": "color",
      "default": "#0c2747"
    },
    {
      "id": "label_color",
      "label": "Button label color",
      "type": "color",
      "default": "#FFFFFF"
    }
  ],
  "important": true
}
{% endschema %}
