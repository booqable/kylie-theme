{{ "hero.css" | asset_url | stylesheet_tag }}
{{ "buttons.css" | asset_url | stylesheet_tag }}

{% style %}
  {% if section.settings.background_image %}
    .hero {
      background-image: url({{ section.settings.background_image | image_url }});
      background-size: cover;
      background-position: center;
    }
  {% endif %}

  {% for block in section.blocks %}
    {% case block.type %}
      {% when "heading" %}
        .hero__title {
          color: {{ block.settings.color }};
        }
      {% when "text" %}
        .hero__text {
          color: {{ block.settings.color }};
        }
      {% when "button" %}
        .bq-button-{{ block.id }} {
          background-color: {{ block.settings.background_color }};
          color: {{ block.settings.label_color }};
        }
    {% endcase %}
  {% endfor %}
{% endstyle %}

{% for block in section.blocks %}
  {% case block.type %}
    {% when "heading" %}
      <h1 class="hero__title">{{ block.settings.text }}</h1>
    {% when "text" %}
      <p class="hero__text">{{ block.settings.text }}</p>
    {% when "button" %}
      <a class="bq-button bq-button-{{ block.id }}" href="{{ block.settings.url }}">{{ block.settings.text }}</a>
  {% endcase %}
{% endfor %}

{% schema %}
{
  "name": "Hero section",
  "tag": "section",
  "class": "hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Hire from us",
          "label": "Heading"
        },
        {
          "type": "color",
          "id": "color",
          "default": "#000000",
          "label": "Color"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "default": "Tell something about your company, describe what you do and what makes you unique.",
          "label": "Text"
        },
        {
          "type": "color",
          "id": "color",
          "default": "#000000",
          "label": "Color"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Shop collection",
          "label": "Label"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        },
        {
          "type": "color",
          "id": "background_color",
          "default": "#FFFFFF",
          "label": "Background color"
        },
        {
          "type": "color",
          "id": "label_color",
          "default": "#000000",
          "label": "Text color"
        }
      ]
    }
  ]
}
{% endschema %}
