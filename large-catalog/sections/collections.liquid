{{ "collections.css" | asset_url | stylesheet_tag }}

{% if section.settings.title %}
  <h2 class="collections__title">{{ section.settings.title }}</h2>
{% endif %}
{% if section.settings.enable_show_more %}
  <a href="#" class="collections__show-more">
    Browse all collections
    <i class="fa-regular fa-chevron-right"></i>
  </a>
{% endif %}
<div class="collections__list">
  {% for collection in section.blocks %}
    <a href="#">
      <div class="collection">
        <h3 class="collection__name">{{ collection.settings.name }}</h3>
      </div>
    </a>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Collections",
  "tag": "section",
  "class": "collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "checkbox",
      "id": "enable_show_more",
      "label": "Enable show more"
    }
  ],
  "max_blocks": 15,
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        }
      ]
    }
  ]
}
{% endschema %}
