{{ "products.css" | asset_url | stylesheet_tag }}

{% if section.settings.title %}
  <h2 class="products__title">{{ section.settings.title }}</h2>
{% endif %}
<div class="bq-carousel">
  <div class="bq-carousel__inner">
    {% for product in section.blocks %}
      <div class="bq-product">
        <div class="bq-product__image">
          {% for image in product.settings.product.images limit: 1 %}
            <img data-src="{{ image.url | image_url }}" alt="" class="lazyload">
          {% endfor %}
        </div>
        <a href="/product/preview">
          <h3 class="bq-product__name">{{ product.settings.product.name }}</h3>
        </a>
        <p class="bq-product__duration">2 days</p>
        <p class="bq-product__price">$24.99</p>
      </div>
    {% endfor %}
  </div>
  <div class="bq-carousel__prev">
    <i class="fa-regular fa-arrow-left"></i>
  </div>
  <div class="bq-carousel__next">
    <i class="fa-regular fa-arrow-right"></i>
  </div>
</div>

{% schema %}
{
  "name": "Products",
  "tag": "section",
  "class": "products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "max_blocks": 16,
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ]
}
{% endschema %}
