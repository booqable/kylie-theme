{{ "products.css" | asset_url | stylesheet_tag }}
{{ "product.css" | asset_url | stylesheet_tag }}
{{ "carousels.css" | asset_url | stylesheet_tag }}

{% if section.settings.title %}
  <h2 class="products__title">{{ section.settings.title }}</h2>
{% endif %}
<div class="carousel carousel--snap-{{ section.settings.snap }}">
  <div class="carousel__inner">
    {% for product in section.blocks %}
      {% if product.settings.product != blank %}
        {% assign image = product.settings.product.images.first %}
        <div class="product carousel__item">
          <a href="{{ product.settings.product.url }}" class="product__image-container">{% if image != blank %}<img data-src="{{ image.url | image_url }}" alt="" class="product__image lazyload">{% endif %}</a>
          {{ product.settings.product | product_availability }}
          <a href="{{ product.settings.product.url }}">
            <h3 class="product__name">{{ product.settings.product.name }}</h3>
          </a>
          {{ product.settings.product | product_price_label }}
          {{ product.settings.product | product_price }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="carousel__controls">
    <div class="carousel__control prev">
      <i class="fa-regular fa-arrow-left"></i>
    </div>
    <div class="carousel__control next">
      <i class="fa-regular fa-arrow-right"></i>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Products",
  "tag": "section",
  "class": "products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "snap",
      "label": "Carousel items alignment",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "max_blocks": 16,
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ]
}
{% endschema %}
