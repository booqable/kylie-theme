{{ "image-form.css" | asset_url | stylesheet_tag }}

<style>
  {% if section.settings.background_color != blank and section.settings.fluid_width == true %}
    .image-form-{{ section.key }}.image-form__wrapper {
      background-color: {{ section.settings.background_color }};
    }
  {% endif %}

  {% if section.settings.background_color != blank %}
    .image-form-{{ section.key }} .image-form__inner {
      background-color: {{ section.settings.background_color }};
    }
  {% endif %}

  {% if section.settings.overlay_color != blank %}
    .image-form-{{ section.key }} .image-form__overlay {
      background-color: {{ section.settings.overlay_color }};
    }
  {% endif %}

  {% if section.settings.overlay_opacity != blank %}
    .image-form-{{ section.key }} .image-form__overlay {
      opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    }
  {% endif %}

  {% for block in section.blocks %}
    {% case block.type %}
      {% when "heading" %}
        .image-form-{{ section.key }} #{{ block.id }}{
          color: var(--color-primary-foreground);

          {% if block.settings.color != blank %}
            color: {{ block.settings.color }};
          {% endif %}
        }
      {% when "text" %}
        .image-form-{{ section.key }} #{{ block.id }} {
          color: var(--color-primary-foreground);

          {% if block.settings.color != blank %}
            color: {{ block.settings.color }};
          {% endif %}
        }
      {% when "button" %}
        .image-form-{{ section.key }} #{{ block.id }} {
          color: var(--color-primary-foreground);

          {% if block.settings.use_solid_button %}
            background-color: var(--color-accent-background);
            color: var(--color-accent-foreground);
          {% endif %}

          {% if block.settings.use_solid_button and block.settings.background_color != blank %}
            background-color: {{ block.settings.background_color }};
          {% endif %}

          {% if block.settings.label_color != blank %}
            color: {{ block.settings.label_color }};
          {% endif %}
        }
    {% endcase %}
  {% endfor %}
</style>

{% capture children %}
  {% for block in section.blocks %}
    {% case block.type %}
      {% when "heading" %}
        <h1 id="{{ block.id }}" class="image-form__title image-form__title--size-{{ block.settings.size }}">{{ block.settings.text | escape }}</h1>
      {% when "text" %}
        <p id="{{ block.id }}" class="image-form__text image-form__text--size-{{ block.settings.size }}">{{ block.settings.text | escape }}</p>
      {% when "button" %}
        <div class="image-form__button-container image-form__button-container--align-{{ section.settings.content_justify }}">
          <a id="{{ block.id }}" class="bq-button bq-button--size-{{ block.settings.size }} {% if block.settings.use_solid_button %}bq-button--solid{% endif %}" href="{{ block.settings.url }}" {% if block.settings.use_new_tab %}target="_blank"{% endif %}>
            {{ block.settings.text | escape }}
          </a>
        </div>
    {% endcase %}
  {% endfor %}
{% endcapture %}

<div class="image-form-{{ section.key }} image-form__wrapper">
  {% if section.settings.background_image.url != blank %}
    {{ section.settings.background_image.url | image_tag:
      oading: 'lazy',
      class: 'image-form__background',
      widths: '900, 1400, 2500'
    }}
  {% endif %}
  <div class="image-form__inner image-form__inner--spacing-{{ section.settings.vertical_spacing }}">
    {% if section.settings.overlay_enabled %}
      <span class="image-form__overlay"></span>
    {% endif %}
    {% if section.settings.placement == "left" %}
      <div class="image-form__form">
        {% include "form" %}
      </div>
      <div class="image-form__content image-form__content--align-{{ section.settings.content_align }} image-form__content--justify-{{ section.settings.content_justify }}">
        {{ children }}
      </div>
    {% else %}
      <div class="image-form__content image-form__content--align-{{ section.settings.content_align }} image-form__content--justify-{{ section.settings.content_justify }}">
        {{ children }}
      </div>
      <div class="image-form__form">
        {% include "form" %}
      </div>
    {% endif %}
  </div>
</div>
<div class="image-form__form image-form__form--mobile">
  {% include "form" %}
</div>

