<style>
  .text-{{ section.key }} {
    font-size: {{ section.settings.size }}px;
    color: {{ section.settings.color }};
    font-weight: {{ section.settings.weight }};
    text-align: {{ section.settings.align }};
    white-space: pre;
  }
</style>

<{{ section.settings.tag }} class="text-{{ section.key }}">
  {{ section.settings.text }}
</{{ section.settings.tag }}>

{% schema %}
{
  "name": "Text",
  "description": "Display text in various styles.",
  "tag": "div",
  "class": "text",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "tag",
      "label": "Tag",
      "options": [
        {
          "value": "h1",
          "label": "Heading 1"
        },
        {
          "value": "h2",
          "label": "Heading 2"
        },
        {
          "value": "h3",
          "label": "Heading 3"
        },
        {
          "value": "h4",
          "label": "Heading 4"
        },
        {
          "value": "h5",
          "label": "Heading 5"
        },
        {
          "value": "h6",
          "label": "Heading 6"
        },
        {
          "value": "p",
          "label": "Paragraph"
        }
      ],
      "default": "p"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Color",
      "default": "#0c2747"
    },
    {
      "type": "number",
      "id": "size",
      "label": "Font size",
      "default": "16"
    },
    {
      "type": "select",
      "id": "weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Regular"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semibold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "select",
      "id": "align",
      "label": "Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    }
  ]
}
{% endschema %}
