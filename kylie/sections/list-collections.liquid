{{ "collections.css" | asset_url | stylesheet_tag }}

{% if section.settings.title %}
  <h2 class="collections__title">{{ section.settings.title }}</h2>
{% endif %}
{% paginate collections %}
  {% if collections.size > 0 %}
    <div class="collections__list">
      {% for collection in collections %}
        <a href="{{ collection.url }}">
          <div class="collection">
            {% if collection.image.url != blank %}
              <img
                data-src="{{ collection.image.url | image_url }}"
                class="collection__image lazyload"
                alt="{{ collection.name }} collection image"
              >
            {% endif %}
            <h3 class="collection__name">{{ collection.name }}</h3>
          </div>
        </a>
      {% endfor %}
    </div>
    {% if paginate.pages > 1 %}
      {% include "pagination" %}
    {% endif %}
  {% else %}
    {% include "cleanstate" %}
  {% endif %}
{% endpaginate %}

{% schema %}
{
  "name": "List",
  "tag": "section",
  "class": "collections",
  "settings": [
    {
      "type": "header",
      "content": "Collections"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "header",
      "content": "Cleanstate"
    },
    {
      "type": "header",
      "content": "Cleanstate"
    },
    {
      "id": "heading",
      "label": "Heading",
      "type": "text"
    },
    {
      "id": "text",
      "label": "Text",
      "type": "textarea"
    },
    {
      "id": "button_label",
      "label": "Button label",
      "type": "text"
    },
    {
      "id": "button_background",
      "label": "Button background color",
      "type": "color",
      "default": "#0c2747"
    },
    {
      "id": "label_color",
      "label": "Button label color",
      "type": "color",
      "default": "#FFFFFF"
    }
  ],
  "max_blocks": 15,
  "blocks": [],
  "templates": ["list-collections"],
  "unique": true
}
{% endschema %}
