{% if section.blocks.size > 0 %}
  {{ "accordion.css" | asset_url | stylesheet_tag }}
  {{ "accordion-block.css" | asset_url | stylesheet_tag }}

  <style>
    #section-{{ section.key }} .accordion__top-text--position-{{ section.settings.title_position }} {
      text-align: {{ section.settings.title_position }};
    }

    {% if section.settings.text_color != blank %}
      #section-{{ section.key }} .accordion__description {
        color: {{ section.settings.text_color }};
      }
    {% endif %}
  </style>

  <div class="accordion__wrapper">
    {% if section.settings.title != blank or section.settings.description != blank %}
      <div class="accordion__top accordion__top-text--position-{{ section.settings.title_position }}">
        {% if section.settings.title != blank %}
          <h2 class="accordion__title accordion__title--size-{{ section.settings.title_size }}">
            {{ section.settings.title }}
          </h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <div class="accordion__description accordion__description--size-{{ section.settings.title_size }} bq-content rx-content">
            <p>{{ section.settings.description }}</p>
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="accordion__content">
      {% render 'accordion-block',
          blocks: section.blocks,
          behavior: section.settings.behavior,
          section_id: section.key
      %}
    </div>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Accordion",
    "description": "Add collapsable sections that allow visitors to reveal information like FAQ's",
    "tag": "section",
    "class": "accordion",
    "max_blocks": 16,
    "settings": [
      {
        "type": "header",
        "content": "General"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Accordion"
      },
      {
        "type": "contentEditor",
        "id": "description",
        "label": "Description",
        "default": "Description"
      },
      {
        "type": "select",
        "id": "title_size",
        "label": "Title and description size",
        "options": [
          {
            "value": "sm",
            "label": "Small"
          },
          {
            "value": "md",
            "label": "Medium"
          },
          {
            "value": "lg",
            "label": "Large"
          }
        ],
        "default": "lg"
      },
      {
        "type": "select",
        "id": "title_position",
        "label": "Title and description position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#131313"
      },
      {
        "type": "select",
        "id": "behavior",
        "label": "Collapse behaviour",
        "options": [
          {
            "value": "single",
            "label": "Single"
          },
          {
            "value": "multiple",
            "label": "Multiple"
          }
        ],
        "default": "multiple"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "contentEditor",
            "id": "content",
            "label": "Content",
            "default": "Content"
          }
        ]
      }
    ]
  }
{% endschema %}
