{% if canonical_url contains "/1?" or canonical_url contains "/1#" %}
  {% include "product-page-preview" %}
{% else %}
  {% include "product-page" %}
{% endif %}

{% schema %}
{
  "name": "Details",
  "tag": "section",
  "class": "product-page",
  "templates": ["product"],
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "description_placement",
      "label": "Product description placement",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "bottom"
    },
    {
      "type": "header",
      "content": "Carousel"
    },
    {
      "type": "paragraph",
      "content": "These settings will apply to the carousel on desktop devices."
    },
    {
      "type": "select",
      "id": "image_fit_desktop",
      "label": "Display images as",
      "options": [
        {
          "value": "cover",
          "label": "Square"
        },
        {
          "value": "contain",
          "label": "Full image"
        }
      ],
      "default": "cover"
    },
    {
      "type": "checkbox",
      "id": "enable_controls",
      "label": "Show navigation buttons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_thumbnails",
      "label": "Show thumbnails",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "infinite_scroll",
      "label": "Infinity scroll",
      "default": true
    },
    {
      "type": "paragraph",
      "content": "These settings will apply to the carousel on mobile devices."
    },
    {
      "type": "select",
      "id": "image_fit_mobile",
      "label": "Display images as",
      "options": [
        {
          "value": "cover",
          "label": "Square"
        },
        {
          "value": "contain",
          "label": "Full image"
        }
      ],
      "default": "cover"
    },
    {
      "type": "checkbox",
      "id": "enable_controls_mobile",
      "label": "Show navigation buttons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_thumbnails_mobile",
      "label": "Show thumbnails",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "infinite_scroll_mobile",
      "label": "Infinity scroll",
      "default": true
    },
    {
      "type": "header",
      "content": "Translations"
    },
    {
      "type": "text",
      "id": "description_label",
      "label": "Description label",
      "default": "Description"
    }
  ],
  "important": true,
  "unique": true
}
{% endschema %}
