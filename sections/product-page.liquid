{% if canonical_url contains "/1?" or canonical_url contains "/1#" %}
  {% include "product-page-preview" %}
{% else %}
  {% if enabled_features contains "next_product_page" %}
    {% include "product-page-next" %}
  {% else %}
    {% include "product-page-legacy" %}
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Details",
  "tag": "section",
  "class": "product-page",
  "templates": ["product"],
  "settings": [
    {
      "type": "header",
      "content": "Translations"
    },
    {
      "type": "text",
      "id": "variation_label",
      "label": "Variations label",
      "default": "Variation"
    },
    {
      "type": "text",
      "id": "description_label",
      "label": "Description label",
      "default": "Description"
    }
  ],
  "important": true,
  "unique": true
}
{% endschema %}
