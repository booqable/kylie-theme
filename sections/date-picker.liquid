{{ "date-picker.css" | asset_url | stylesheet_tag }}

{% if settings.primary_color != blank %}
  {% assign color = settings.primary_color %}
{% else %}
  {% assign color = branding_color %}
{% endif %}

{% render "date-picker", branding_color: color %}

{% schema %}
{
  "name": "Date Picker",
  "description": "Allow your visitors to select a rental period.",
  "tag": "section",
  "class": "date-location",
  "settings": []
}
{% endschema %}
