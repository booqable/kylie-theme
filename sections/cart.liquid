{{ "cart.css" | asset_url | stylesheet_tag }}

{% if section.settings.show_title %}
  <h3 class="cart__title">{{ section.settings.title }}</h3>
{% endif %}

{% if section.settings.show_lines %}
  <div class="cart__lines">
    {{ cart | lines }}
  </div>
{% endif %}


<div class="cart__footer">
  {% if section.settings.show_services %}
    {{ cart | services }}
  {% endif %}
  {{ cart | totals }}
</div>

{% schema %}
{
  "name": "Cart",
  "description": "Display all necessary information about the cart",
  "tag": "section",
  "class": "cart",
  "settings": [
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Cart"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show title",
      "default": true
    },
    {
      "type": "header",
      "content": "Elements"
    },
    {
      "type": "checkbox",
      "id": "show_lines",
      "label": "Show lines",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_services",
      "label": "Show services",
      "default": true
    }
  ],
  "templates": ["cart"],
  "unique": true,
  "important": true
}
{% endschema %}