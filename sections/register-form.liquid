{{ "account.css" | asset_url | stylesheet_tag }}

<div class="account">
  <h3 class="account__title">Create an account</h3>
  <div class="account__divider">
    Already have an account?
    <a class="account__link" href="{{ routes.login_url }}">
      Log in
    </a>
  </div>

  <form class="new_shop_next_user" id="new_shop_next_user" action="{{ canonical_url }}" accept-charset="UTF-8" method="post">

    <input type="hidden" name="authenticity_token" value="{{ form_authenticity_token }}" autocomplete="off">

    <div class="field">
      <label for="shop_next_user_name" class="account__label">Full name</label>
      <input autofocus="autofocus" class="account__input" autocomplete="name" type="name" name="shop_next_user[name]" id="shop_next_user_name">
    </div>

    <div>
      <label for="shop_next_user_email" class="account__label">Email</label>
      <input autofocus="autofocus" class="account__input" autocomplete="email" type="email" name="shop_next_user[email]" id="shop_next_user_email">
    </div>

    <div>
      <label for="shop_next_user_password" class="account__label">Password</label>
      <input autocomplete="new-password" class="account__input" type="password" name="shop_next_user[password]" id="shop_next_user_password">
    </div>

    <div class="account__divider">
      <label for="shop_next_user_password_confirmation" class="account__label">Password confirmation</label>
      <input autocomplete="new-password" class="account__input" type="password" name="shop_next_user[password_confirmation]" id="shop_next_user_password_confirmation">
    </div>
  
    <div class="account__divider">
      <label class="account__static-label">Account type</label>
    
      <div class="account-type-options">
        <div class="account-type-options__first-option">
          <input type="radio" name="shop_next_user[legal_type]" id="shop_next_user_legal_type_person" value="person">
          <label class="account__static-label" for="shop_next_user_legal_type_person">Private</label>
        </div>
        
        <div>
          <input type="radio" name="shop_next_user[legal_type]" id="shop_next_user_legal_type_commercial" value="commercial">
          <label class="account__static-label" for="shop_next_user_legal_type_commercial">Company</label>
        </div>
      </div>
    </div>

    <div class="account__divider--small">
      <input type="checkbox" name="shop_next_user[agreement_accepted]" id="shop_next_user_agreement_accepted" value="true">
      <label for="shop_next_user_agreement_accepted">
        I agree to the <a class="account__link" href="https://booqable.com/agreement" target="_blank">Terms and Agreements</a>
      </label>
    </div>

    {%- if alert -%}
      <div class="account__alert">{{ alert }}</div>
    {%- endif -%}

    <input type="submit" class="account__button account__button--primary" name="commit" value="Sign up" data-disable-with="Sign up">
  </form>
</div>
