{{ "search.css" | asset_url | stylesheet_tag }}
{{ "product.css" | asset_url | stylesheet_tag }}

{% if results_count > 0 %}
<h1 class="search__title">{{ section.settings.search_results_title }} “{{ query }}”</h1>
{% endif %}
{% paginate results %}
  {% assign card_image_fit = settings.product_card_image_fit %}

  {% comment %} CSS variables start {% endcomment %}
  {% capture image_variables %}
    {% case card_image_fit %}
      {% when 'cover' %}
        --object-fit: cover;
      {% when 'contain' %}
        --object-fit: contain;
    {% endcase %}
  {% endcapture %}

  {% if settings.use_focal_images %}
    {% capture image_variables %}
      --object-fit: cover;
    {% endcapture %}
  {% endif %}
  {% comment %} CSS variables end {% endcomment %}

  <div class="search-results{% if results_count == 0 %} no-results{% endif %}"{% if card_image_fit != blank %} style="{{- image_variables | escape -}}"{% endif %}>
    {% if results_count == 0 %}
      {% include "cleanstate" %}
    {% else %}
      {% for result in results %}
        {% assign image = result.images.first %}
        {% if settings.use_focal_images %}
          {% assign focal = image.coordinates %}
        {% endif %}
        <div class="product">
          <a href="{{ result.url }}" class="product__image-container">{% if image.url != blank %}{{ image.url | image_tag:
            loading: 'lazy',
            class: 'product__image',
            alt: result.name,
            widths: '600, 750',
            sizes: '(max-width: 490px) 750px, 600px',
            focal: focal
          }}{% endif %}</a>
          {{ result | product_availability }}
          <a class="product__link" href="{{ result.url }}">
            <h3 class="product__name">{{ result.name }}</h3>
          </a>
          {%- if result.excerpt != blank and section.settings.show_excerpt -%}
            <div class="product__description">{{- result.excerpt -}}</div>
          {%- endif -%}
          {{ result | product_price_label }}
          {{ result | product_price }}
        </div>
      {% endfor %}
    {% endif %}
  </div>
  {% if paginate.pages > 1 %}
    {% include "pagination" %}
  {% endif %}
{% endpaginate %}

{% schema %}
{
  "name": "Results",
  "tag": "section",
  "class": "search",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show description excerpt",
      "default": false
    },
    {
      "type": "header",
      "content": "Translations"
    },
    {
      "type": "text",
      "id": "search_results_title",
      "label": "Search results title",
      "default": "Search results for"
    },
    {
      "type": "header",
      "content": "Cleanstate"
    },
    {
      "id": "heading",
      "label": "Heading",
      "type": "text"
    },
    {
      "id": "text",
      "label": "Text",
      "type": "textarea"
    },
    {
      "id": "button_label",
      "label": "Button label",
      "type": "text"
    },
    {
      "id": "button_background",
      "label": "Button background color",
      "type": "color",
      "placeholder": "Default"
    },
    {
      "id": "label_color",
      "label": "Button label color",
      "type": "color",
      "placeholder": "Default"
    }
  ],
  "templates": ["search"],
  "important": true,
  "unique": true
}
{% endschema %}
